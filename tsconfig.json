{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es7", "es6"],
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
